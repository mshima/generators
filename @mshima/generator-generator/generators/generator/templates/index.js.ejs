import ParentGenerator from 'yeoman-generator';

export default class <%= className %>Generator extends ParentGenerator {
  constructor(args, options, features) {
    super(args, options, {taskPrefix: '#', ...features});

    if (this.options.help) {
      return;
    }

    this.checkEnvironmentVersion('<%= yeomanEnvironmentVersion %>');
  }

  get '#initializing'() {
    return {};
  }

  get '#prompting'() {
    return {};
  }

  get '#configuring'() {
    return {};
  }

  get '#composing'() {
    return {};
  }

  get '#default'() {
    return {};
  }

  get '#writing'() {
    return {
      renderTemplates () {
        this.renderTemplate('(.)?*', '');
      }
    };
  }

  get '#postWriting'() {
    return {
      packageJson() {
        this.packageJson.merge({});
      }
    };
  }

  get '#install'() {
    return {};
  }

  get '#end'() {
    return {};
  }
}
